{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./javascript",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "lib":["ES2021" , "DOM"]
  },
  "include": ["javascript/**/*"]
}
